cache deny raptor_lst
cache_peer 172.16.3.1 parent 8080 0 proxy-only no-digest
dead_peer_timeout 2 seconds
cache_peer_access 172.16.3.1 allow raptor_lst
cache_peer_access 172.16.3.1 deny all
